<script>
  let account;
  const connectToMetaMask = async () => {
      if(window.ethereum !== "undefined") {
        const accounts = await ethereum.request({method: "eth_requestAccounts"});
        document.getElementById('metamaskConnection').innerText = 'Connected to MetaMask';
        account = accounts[0];
        console.log(accounts);
      }
      
  }

  const connectContract = async () => {
    const abi = [
                  {
                    "inputs": [],
                    "name": "getPlayerName",
                    "outputs": [
                      {
                        "internalType": "string",
                        "name": "",
                        "type": "string"
                      }
                    ],
                    "stateMutability": "view",
                    "type": "function"
                  },
                  {
                    "inputs": [],
                    "name": "getPlayerRun",
                    "outputs": [
                      {
                        "internalType": "int256",
                        "name": "",
                        "type": "int256"
                      }
                    ],
                    "stateMutability": "view",
                    "type": "function"
                  },
                  {
                    "inputs": [],
                    "name": "getPlayerWickets",
                    "outputs": [
                      {
                        "internalType": "int256",
                        "name": "",
                        "type": "int256"
                      }
                    ],
                    "stateMutability": "view",
                    "type": "function"
                  },
                  {
                    "inputs": [
                      {
                        "internalType": "string",
                        "name": "_name",
                        "type": "string"
                      },
                      {
                        "internalType": "int256",
                        "name": "_runs",
                        "type": "int256"
                      },
                      {
                        "internalType": "int256",
                        "name": "_wickets",
                        "type": "int256"
                      }
                    ],
                    "name": "setPlayer",
                    "outputs": [],
                    "stateMutability": "nonpayable",
                    "type": "function"
                  }
];
      const contractAddress = "0x1ebf38034ec39b9afe4a2b24245823a555ced469";
      window.web3 = await new Web3(window.ethereum);
      window.contract = await new window.web3.eth.Contract(abi, contractAddress);
      document.getElementById('contractConnection').innerText = 'Connected to Contract';
  }

  const setPlayer = () => {
    const name = document.getElementById('name').value;
    const runs = document.getElementById('run').value;
    const wickets = document.getElementById('wicket').value;
    window.contract.methods.setPlayer(name, runs, wickets).send({ from: account });
  }

  const getPlayer = async () => {
    document.getElementById('playerName').innerHTML = "Name: "+ await window.contract.methods.getPlayerName().call();
    document.getElementById('playerRuns').innerHTML = "Runs: "+ await window.contract.methods.getPlayerRun().call();
    document.getElementById('playerWickets').innerHTML = "Wickets: "+ await window.contract.methods.getPlayerWickets().call();
  }
</script>